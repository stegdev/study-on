{% extends 'base.html.twig' %}

{% block title %}{{ lesson.name }} / {{ lesson.getCourse.name }} / StudyOn{% endblock %}

{% block body %}
    <h1>{{ lesson.Name }}</h1>

    <h2>
        Курс
        <a href="{{ path('course_show', {'id': lesson.getCourse.id}) }}">{{ lesson.getCourse.name }}</a>
    </h2>

    <div class="row">
        <a class="btn btn-outline-dark m-sm-1" href="{{ path('lesson_edit', {'id': lesson.id}) }}">Редактировать</a>
        {{ include('lesson/_delete_form.html.twig') }}
    </div>

    <h3>Содержимое</h3>
    {{ lesson.content }}
{% endblock %}
