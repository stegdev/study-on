{% extends 'base.html.twig' %}

{% block title %}{{ course.name }} / StudyOn{% endblock %}

{% block body %}
    <h1>{{ course.name }}</h1>
    <h2>{{ course.description }}</h2>
    <h2>Уроки</h2>

    <ol>
        {% for lesson in course.lessons %}
            <li><a href ="{{ path('lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a></li>
        {% endfor %}
    </ol>


    <div class="row">
        <a class="btn btn-outline-dark m-sm-1" href="{{ path('course_index') }}">К списку курсов</a>
        <a class="btn btn-outline-dark m-sm-1" href="{{ path('course_edit', {'id': course.id}) }}">Редактировать курс</a>
        <a class="btn btn-outline-dark m-sm-1" href="{{ path('lesson_new', {'course_id': course.id}) }}">Добавить урок</a>
        {{ include('course/_delete_form.html.twig') }}
    </div>
{% endblock %}
