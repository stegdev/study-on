{% extends 'base.html.twig' %}

{% block title %}Курсы / StudyOn{% endblock %}

{% block body %}
    <h1>Курсы</h1>
        <div class = "container-fluid">
            <div class="row">
                {% for course in courses %}
                    <div class="col-sm-5 border border-dark p-sm-2 m-sm-1">
                        <h3>{{ course.name }}</h3>
                        <p>{{ course.description }}</p>
                        <a class="btn btn-outline-dark" href="{{ path('course_show', {'id':course.id}) }}">Пройти</a>
                    </div>
                {% else %}
                    <h3>Курсов не обнаружено</h3>
                {% endfor %}
            </div>
        </div>
    <a class="btn btn-outline-dark" href="{{ path('course_new') }}">Добавить курс</a>
{% endblock %}
